<h4>Section Fields</h4>
<% unless @section.fields.count.zero? %>
  <table class="table table-condensed table-hover table-bordered table-striped" id="sort_fields">
    <thead>
      <tr>
        <th>Field</th>
        <th>Type</th>
        <th colspan="2">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @section.fields.each do |f| %>
        <tr class="hand" id="s_<%= f.id %>">
          <td class="middle">
            <%= " &nbsp;#{sg 'sort'} &nbsp;#{f.name}".html_safe %>
          </td>
          <td class="middle">
            <%= f.field_type %>
          </td>
          <td class="tight">
            <%= link_to "#{sg 'pencil'} &nbsp;Edit".html_safe, edit_section_field_path(@section, f), id: "field_#{f.id}", type: :button, class: 'btn btn-sm btn-warning' %>
          </td>
          <td class="tight">
            <%= link_to "#{sg 'remove'} &nbsp;Delete".html_safe, 'javascript:;', id: "ad_field_#{f.id}", type: :button, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= simple_form_for [@section, @field] do |f| %>
        <%= f.hidden_field :section_id, value: @section.id %>
        <%= render partial: 'fields/form', locals: { f: f } %>
        <%= f.button :button, class: 'btn-success' do %>
          <%= sg 'share-alt' %>
          Create Field
        <% end %>
      <% end %>
    </div>
  </div>
</div>
