<div class="navbar-wrapper">
  <div class="container">
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <%= link_to image_tag('/favicon.png', class: 'navbar-left navbar-logo hidden-xs', title: '', alt: ''), logged_in? ? projects_path : root_path %>
      <div class="container">
        <div class="navbar-header">
          <button aria-controls="<%= :navbar %>" aria-expanded="<%= false %>" class="navbar-toggle collapsed" data-target="#navbar" data-toggle="<%= :collapse %>" type="<%= :button %>">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to SITE_TITLE, logged_in? ? projects_path : root_path, class: 'navbar-brand' %>
        </div>
        <div class="navbar-collapse collapse" id="navbar">
          <ul class="nav navbar-nav navbar-right">
            <li class="<%= active_menu('/') %>">
              <%= link_to raw("#{sg 'home'} &nbsp;Home"), logged_in? ? projects_path : root_path %>
            </li>
            <li class="<%= active_menu('/about') %>">
              <%= link_to(raw('<span class="glyphicon glyphicon-info-sign"></span>&nbsp; About'), about_path) %>
            </li>
            <li class="<%= active_menu('/contact') %>">
              <%= link_to(raw('<span class="glyphicon glyphicon-globe"></span>&nbsp; Contact'), contact_path) %>
            </li>
            <% if logged_in? %>
              <li>
                <%= link_to(raw('<span class="glyphicon glyphicon-log-out"></span>&nbsp; Logout'), logout_path) %>
              </li>
            <% end %>
            <% unless logged_in? %>
              <li class="<%= active_menu('/users/new') %>">
                <%= link_to raw("#{sg 'plus-sign'} &nbsp;Signup"), new_user_path %>
              </li>
              <li class="<%= active_menu('/login') %>">
                <%= link_to raw("#{sg 'log-in'} &nbsp;Login"), login_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
