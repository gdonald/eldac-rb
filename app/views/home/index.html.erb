<div class="mx-auto home-margin">
  <div class="mx-auto text-center">
    <h1><%= link_to site_name, root_path, class: 'text-decoration-none' %></h1>
  </div>
  <div class="mx-auto mt-4 col-xl-6 col-md-7 autocomplete-wrapper home" data-controller="autocomplete">
    <%= form_with method: 'get',
          url: search_path,
          id: 'search',
          html: {
            autocomplete: 'off',
            'data-autocomplete-target' => 'form'
          } do |form| %>
      <div class="input-group mb-3">
        <%= form.text_field :q,
              placeholder: 'Search',
              value: '',
              class: 'form-control query',
              required: true,
              autofocus: true,
              'data-autocomplete-target' => 'q',
              'data-action' => 'keyup->autocomplete#search',
              'onkeydown' => 'event.keyCode == 13 && event.preventDefault()'
        %>
        <button class="input-group-text" id="search"><i class="bi-search"></i></button>
      </div>
      <div class="negative-margin-home autocomplete-result"
           data-autocomplete-target="results"
           style="display:none"
      ></div>
    <% end %>
  </div>
</div>
