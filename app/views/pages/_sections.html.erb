<h4>Page Sections</h4>
<% unless @sections.count.zero? %>
  <table class="table table-condensed table-hover table-bordered table-striped" id="sort_sections">
    <thead>
      <tr>
        <th colspan="3">Section</th>
      </tr>
    </thead>
    <tbody>
      <% @sections.each do |s| %>
        <tr class="hand" id="s_<%= s.id %>">
          <td class="middle">
            <%= " &nbsp;#{sg 'sort'} &nbsp;#{s.name}".html_safe %>
          </td>
          <td class="tight">
            <%= link_to raw("#{sg 'pencil'} &nbsp;Edit"), edit_page_section_path(@page, s), id: "section_#{s.id}", type: :button, class: 'btn btn-sm btn-warning' %>
          </td>
          <td class="tight">
            <%= link_to raw("#{sg 'remove'} &nbsp;Delete"), 'javascript:;', id: "ad_section_#{s.id}", type: :button, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= simple_form_for [@page, @section] do |f| %>
        <%= f.hidden_field :form_id, value: @form.id %>
        <%= f.hidden_field :page_id, value: @page.id %>
        <%= f.input :name %>
        <%= f.button :button, class: 'btn-success' do %>
          <%= sg 'share-alt' %>
          Create New Section
        <% end %>
      <% end %>
    </div>
  </div>
</div>
