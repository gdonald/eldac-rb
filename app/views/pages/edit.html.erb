<div class="h3 page-header hidden-xs">
  <%= link_to 'Projects', projects_path %>
  <%= dl %>
  <%= link_to @project.name, edit_project_path(@project) %>
  <%= dl %>
  <%= link_to @form.name, edit_project_form_path(@project, @form) %>
  <%= dl %>
  Edit Page
</div>
<div>
  <div class="row">
    <div class="col-md-6">
      <div>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= simple_form_for [@form, @page], method: :put do |f| %>
              <%= render partial: 'pages/form', locals: { f: f } %>
              <div class="form-group">
                <%= f.button :button, class: 'btn-success' do %>
                  <%= sg 'pencil' %>
                  Update Page
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= render 'pages/sections' %>
    </div>
  </div>
</div>
