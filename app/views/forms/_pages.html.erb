<h4>Form Pages</h4>
<% unless @pages.count.zero? %>
  <table class="table table-condensed table-hover table-bordered table-striped" id="sort_pages">
    <thead>
      <tr>
        <th colspan="3">Page</th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |p| %>
        <tr class="hand" id="p_<%= p.id %>">
          <td class="middle">
            <%= " &nbsp;#{sg 'sort'} &nbsp;#{p.name}".html_safe %>
          </td>
          <td class="tight">
            <%= link_to raw("#{sg 'pencil'} &nbsp;Edit"), edit_form_page_path(@form, p), id: "page_#{p.id}", type: :button, class: 'btn btn-sm btn-warning' %>
          </td>
          <td class="tight">
            <%= link_to raw("#{sg 'remove'} &nbsp;Delete"), 'javascript:;', id: "ad_page_#{p.id}", type: :button, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= simple_form_for [@form, @page] do |f| %>
        <%= f.hidden_field :project_id, value: @project.id %>
        <%= f.hidden_field :form_id, value: @form.id %>
        <%= render partial: 'pages/form', locals: { f: f } %>
        <%= f.button :button, class: 'btn-success' do %>
          <%= sg 'share-alt' %>
          Create New Page
        <% end %>
      <% end %>
    </div>
  </div>
</div>
